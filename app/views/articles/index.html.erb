<div class="container">
	<div class="row">
<h1>Articles:</h1>
<% @articles.each do |article| %>

	<h2><%= article.title %></h2>
	<p><%= article.text %></p>
	<%= link_to 'Show', article_path(article) %>
	<%if  current_user%>
	<%= link_to 'Edit', edit_article_path(article) %>
	<%= link_to 'Delete', article_path(article), method: :delete , data: {confirm: 'question?'}%>
	<%end%>
	<hr>

<%end%>

</div>
</div>